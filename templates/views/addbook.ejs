
<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Add Book</title>
    <%- include ("../../templates/partials/csslinker") %>
</head>
<body>
  <%- include ("../../templates/partials/navbar") %>
<div class="container" style="margin-top:25vh">
  <div class="row">
    <div class="col-md-4 col-xs-4 col-sm-4 col-lg-4 ">
      <img src="/img/addbookbg.png" alt="">
    </div>
  <div class="col-sm-12 col-md-6 col-lg-6" >
     
      <form action="/users/addbook" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label for="bookname"><b>Bookname</b></label>
            <input type="text" class="form-control" id="bookname" placeholder="Enter bookname" name="bookname" required>
          </div>
          <div class="form-group">
            <label for="lastname"><b>Quantity</b></label>
            <input type="text" class="form-control" placeholder="Enter quantity" name="quantity" required>
          </div>
          <div class="form-group">
            <label for="description"><b>Description</b></label>
            <input type="description" class="form-control" placeholder="Enter description" name="description" required>
          </div>
          <div class="form-group">
            <label for="bookcover"><b>Upload file</b></label>
            <input type="file"  class="form-control" placeholder="upload book pic" name="bookcover">
            
          </div>
          
          <button type="submit" class="btn btn-warning btn-lg">Add BOOK</button>
      </form>
  </div>
  </div>
  

</div>
</body>
</html>
